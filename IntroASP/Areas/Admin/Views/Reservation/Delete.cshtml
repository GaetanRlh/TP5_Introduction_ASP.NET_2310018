@model IntroASP.Areas.Admin.ViewModels.ReservationDeleteVM
@{
    ViewData["Title"] = "Supprimer une réservation";
}

<div class="container">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    @if (Model == null)
    {
        <div class="alert alert-danger">
            La réservation spécifiée n'existe pas.
        </div>
    }
    else
    {
        <div class="mb-3">
            <p><strong>Date:</strong> @Model.DateReservation.ToString("dd/MM/yyyy")</p>
            <p><strong>Nom:</strong> @Model.Nom</p>
            <p><strong>Courriel:</strong> @Model.Courriel</p>
            <p><strong>Nombre de personnes:</strong> @Model.NombreDePersonnes</p>
            <p><strong>Choix de menu:</strong> @Model.MenuId</p>
        </div>

        <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> Supprimer
            </button>
            <a asp-action="List" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
        </form>
    }
</div>