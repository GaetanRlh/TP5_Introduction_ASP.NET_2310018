@model IntroASP.Areas.Admin.ViewModels.MenuDeleteVM
@{
    ViewData["Title"] = "Supprimer un choix de menu";
}

<div class="container">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="alert alert-danger">
                <h4 class="alert-heading">Êtes-vous sûr de vouloir supprimer ce choix de menu?</h4>
                <p>Cette action est irréversible.</p>
            </div>

            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Détails du choix de menu</h5>
                    <dl class="row">
                        <dt class="col-sm-3">Description:</dt>
                        <dd class="col-sm-9">@Model.Description</dd>
                    </dl>
                </div>
            </div>

            <form method="post">
                <input type="hidden" asp-for="@Model.Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Supprimer
                </button>
                <a asp-action="List" asp-controller="MenuChoice" class="btn btn-secondary">Annuler</a>
            </form>
        </div>
    </div>
</div> 