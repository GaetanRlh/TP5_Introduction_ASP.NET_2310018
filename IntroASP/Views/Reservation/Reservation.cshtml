@model IntroASP.ViewModels.ReservationCreateVM
@{
    ViewData["Title"] = "Réserver une table";
}

<div class="container">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-lg-6 d-none d-lg-block">
            <img src="/img/restaurant.jpeg" class="img-fluid" alt="Restaurant">
        </div>
        <div class="col-lg-6">
            <form asp-action="CreateReservation" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text"></span>
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ReservationDate" class="form-label"></label>
                    <input asp-for="ReservationDate" class="form-control datepicker" autocomplete="off" />
                    <span asp-validation-for="ReservationDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NumberOfPeople" class="form-label"></label>
                    <input asp-for="NumberOfPeople" class="form-control spinner" />
                    <span asp-validation-for="NumberOfPeople" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MenuChoiceId" class="form-label"></label>
                    <select asp-for="MenuChoiceId" class="form-select @(ViewData.ModelState["MenuChoiceId"]?.Errors.Count > 0 ? "is-invalid" : "")" asp-items="ViewBag.MenuChoices">
                        <option value="">-- Sélectionnez un menu --</option>
                    </select>
                    <span asp-validation-for="MenuChoiceId" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-check"></i> Réserver
                </button> 
            </form>
        </div>
    </div>
</div>
